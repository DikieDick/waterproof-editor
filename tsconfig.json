{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "./dist",
    "composite": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@common": ["common"],
      "@common/*": ["common/*"]
    },
    "target": "ESNext",
    "module": "commonjs"
  },
  "include": [
    "src/**/*.ts",
    "common/**/*.ts",
    "common/**/*.json"
  ],
}
